{
    "navigationFallback": {
      "rewrite": "/index.html",
      "exclude": ["/static/*", "/api/*"]
    },
    "routes": [
      {
        "route": "/login",
        "rewrite": "/index.html"
      },
      {
        "route": "/signup",
        "rewrite": "/index.html"
      },
      {
        "route": "/home",
        "rewrite": "/index.html"
      },
      {
        "route": "/item/*",
        "rewrite": "/index.html"
      }
    ],
    "responseOverrides": {
      "404": {
        "rewrite": "/index.html",
        "statusCode": 200
      }
    },
    "globalHeaders": {
      "Content-Security-Policy": "default-src 'self'; script-src 'self''unsafe-inline'; style-src 'self' 'unsafe-inline'",
      "Strict-Transport-Security": "max-age=31536000; includeSubDomains",
      "X-Content-Type-Options": "nosniff",
      "X-Frame-Options": "DENY"
    }
  }
