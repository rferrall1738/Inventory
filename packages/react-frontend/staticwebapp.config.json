{
    "navigationFallback": {
      "rewrite": "/index.html",
      "exclude": ["/static/*", "/login", "/signup", "/home", "/item/*"]
    },
    "routes": [
      {
        "route": "/login",
        "methods": ["GET", "POST"],
        "rewrite": "/index.html",
        "redirect": "/home"
      },
      {
        "route": "/signup",
        "methods": ["GET", "POST"],
        "rewrite": "/index.html",
        "redirect": "/login"
      },
      {
        "route": "/home",
        "methods":["GET", "POST"],
        "rewrite": "/index.html"
      },
      {
        "route": "/item/*",
        "methods":["GET","POST"],
        "rewrite": "/index.html"
      }
    ],
    "responseOverrides": {
      "404": {
        "rewrite": "/index.html",
        "statusCode": 200
      }
    }
    
    }
  
